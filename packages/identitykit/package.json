{
  "name": "@nfid/identitykit",
  "version": "1.0.2",
  "description": "A React library for adding wallet connections to dApps.",
  "keywords": [
    "ICP",
    "identity",
    "wallet",
    "dApp",
    "react",
    "blockchain",
    "crypto"
  ],
  "homepage": "https://www.identitykit.xyz/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/internet-identity-labs/identitykit.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/internet-identity-labs/identitykit/issues"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exportsProd": {
    ".": {
      "main": "./dist/index.cjs.js",
      "module": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "main": "./dist/libs/react/index.cjs.js",
      "module": "./dist/libs/react/index.esm.js",
      "types": "./dist/libs/react/index.d.ts"
    },
    "./react/styles.css": {
      "import": "./dist/libs/react/index.css",
      "require": "./dist/libs/react/index.css",
      "default": "./dist/libs/react/index.css"
    }
  },
  "exports": {
    ".": "./src/index.ts",
    "./react": "./src/libs/react/index.ts",
    "./react/styles.css": {
      "import": "./dist/libs/react/index.css",
      "require": "./dist/libs/react/index.css",
      "default": "./dist/libs/react/index.css"
    }
  },
  "engines": {
    "node": ">=12.7.0"
  },
  "scripts": {
    "dev": "npm run build-dev --watch",
    "build": "npm run build-prod && npm run build-dev",
    "build-prod": "rm -rf ./dist && rollup -c rollup.config.prod.js --bundleConfigAsCjs",
    "build-dev": "rm -rf ./dist && rollup -c rollup.config.dev.js --bundleConfigAsCjs",
    "post:build": "node ./scripts/frankBuild.js",
    "test": "jest --passWithNoTests",
    "lint:check": "eslint . --ext ts,tsx --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --max-warnings 0",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "size-limit": [
    {
      "path": "dist/libs/react/index.cjs.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/libs/react/index.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@headlessui/react": "2.1.8",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@slide-computer/signer": "^3.7.0",
    "@slide-computer/signer-agent": "^3.7.0",
    "@slide-computer/signer-storage": "^3.7.0",
    "@slide-computer/signer-transport-auth-client": "^3.7.0",
    "@slide-computer/signer-transport-plug": "^3.7.0",
    "@slide-computer/signer-transport-stoic": "^3.7.0",
    "@slide-computer/signer-web": "^3.7.0",
    "@slide-computer/signer-extension": "^3.7.0",
    "clsx": "^2.1.1",
    "react-hook-form": "^7.53.0",
    "tailwindcss": "^3.4.13",
    "tailwindcss-scoped-preflight": "^3.4.5",
    "use-async-memo": "^1.2.5",
    "use-context-selector": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@svgr/rollup": "^8.1.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "eslint-plugin-jest": "^28.8.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.23.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "size-limit": "^11.1.6",
    "storybook": "^8.3.4",
    "ts-jest": "^29.2.5"
  },
  "peerDependencies": {
    "@dfinity/ledger-icp": ">=2.4.0",
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
