{
  "name": "@nfid/react-dapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --force --host",
    "build": "tsc && vite build",
    "build:preview": "vite preview",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.2",
    "@dfinity/ledger-icp": "^2.6.13",
    "@nfid/identitykit": "*",
    "@radix-ui/themes": "^3.2.1",
    "@uiw/codemirror-extensions-langs": "^4.25.3",
    "@uiw/codemirror-theme-basic": "^4.25.3",
    "@uiw/react-codemirror": "^4.25.3",
    "@slide-computer/signer": "3.20.0",
    "clsx": "^2.1.1",
    "ictool": "^1.1.1",
    "react-toastify": "^11.0.5",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "devDependencies": {
    "@codemirror/lang-jinja": "^6.0.0",
    "@nfid/eslint-config": "*",
    "@playwright/test": "^1.57.0",
    "@storybook/react": "^8.6.14",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "lodash.merge": "^4.6.2",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "radix-themes-tw": "^0.2.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx} !(src/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
