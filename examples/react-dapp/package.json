{
  "name": "@nfid/react-dapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --force --host",
    "build": "tsc && vite build",
    "build:preview": "vite preview",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@dfinity/ledger-icp": "^2.5.0",
    "@nfid/identitykit": "*",
    "@radix-ui/themes": "^3.1.4",
    "@uiw/codemirror-extensions-langs": "^4.23.3",
    "@uiw/codemirror-theme-basic": "^4.23.3",
    "@uiw/react-codemirror": "^4.23.3",
    "clsx": "^2.1.1",
    "ictool": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-toastify": "^10.0.5",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@playwright/test": "^1.47.2",
    "@storybook/react": "^8.3.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "lodash.merge": "^4.6.2",
    "next-themes": "^0.3.0",
    "postcss": "^8.4.47",
    "radix-themes-tw": "^0.2.3",
    "tailwindcss": "^3.4.13",
    "micromatch": "4.0.8",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx} !(src/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
