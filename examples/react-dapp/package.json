{
  "name": "@nfid/react-dapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@nfid/identitykit": "*",
    "@radix-ui/themes": "^3.0.5",
    "@uiw/codemirror-extensions-langs": "^4.23.0",
    "@uiw/codemirror-theme-basic": "^4.23.0",
    "@uiw/react-codemirror": "^4.23.0",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-toastify": "^10.0.5"
  },
  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@playwright/test": "^1.45.1",
    "@storybook/react": "^8.2.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.17",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.8",
    "lodash.merge": "^4.6.2",
    "next-themes": "^0.3.0",
    "postcss": "^8.4.39",
    "radix-themes-tw": "^0.2.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx} !(src/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
