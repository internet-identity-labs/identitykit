{
  "name": "@nfid/react-signer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "dependencies": {
    "@dfinity/agent": "^2.4.0",
    "@dfinity/candid": "^2.4.0",
    "@dfinity/identity": "^2.4.0",
    "@dfinity/ledger-icp": "^2.6.13",
    "@dfinity/principal": "^2.4.0",
    "@dfinity/utils": "^2.5.1",
    "@radix-ui/themes": "^3.2.0",
    "idb": "8.0.3",
    "next-themes": "^0.4.4",
    "postcss": "^8.5.5",
    "radix-themes-tw": "^1.1.0",
    "tailwindcss": "^4.1.10",
    "micromatch": "4.0.8",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.20"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx} !(src/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
