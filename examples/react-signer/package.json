{
  "name": "@nfid/react-signer",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint:check": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "format:write": "prettier --write '**/*.{ts,tsx,md,mdx,css}'",
    "lint-staged": "lint-staged --no-stash"
  },
  "dependencies": {
    "@dfinity/agent": "^2.0.0",
    "@dfinity/principal": "^2.0.0",
    "@dfinity/candid": "^2.0.0",
    "@dfinity/identity": "^2.0.0",
    "@dfinity/ledger-icp": "^2.4.0",
    "@dfinity/utils": "^2.4.0",
    "@radix-ui/themes": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.3.5",
    "vite-plugin-node-polyfills": "^0.22.0",
    "idb": "8.0.0",
    "next-themes": "^0.3.0",
    "postcss": "^8.4.33",
    "radix-themes-tw": "^0.2.3",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.9"
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx} !(src/idl/*.ts)": [
      "npm run lint:fix"
    ],
    "**/*.{js,jsx,ts,tsx,md,json}": [
      "npm run format:write"
    ]
  }
}
