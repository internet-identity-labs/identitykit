{
  "name": "nfid",
  "private": false,
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "echo 'ðŸ’€ DONT REMOVE THIS ðŸ’€'",
    "build-ci": "turbo build",
    "build-package": "turbo build --force --filter='@nfid/identitykit'",
    "build-docs": "turbo build --force --filter='@nfid/docs'",
    "build-playground:dev": "dotenv -e .env.dev -- turbo run build --force --filter='@nfid/react-demo' --filter='@nfid/react-dapp' --filter='@nfid/react-signer'",
    "build-playground:ic": "dotenv -e .env.ic -- turbo run build --force --filter='@nfid/react-demo' --filter='@nfid/react-dapp' --filter='@nfid/react-signer'",
    "playground:docs": "turbo run dev --force --filter='@nfid/docs'",
    "playground": "dotenv -- turbo run dev --force --filter=\"@nfid/react-demo\" --filter=\"@nfid/react-dapp\" --filter=\"@nfid/react-signer\"",
    "dev": "turbo dev",
    "lint:check": "turbo lint:check",
    "format:check": "prettier --check '**/*.{ts,tsx,md,mdx,css}'",
    "test": "turbo test --force",
    "test:e2e": "turbo test:e2e --force",
    "test:e2e:ui:dapp": "cd ./examples/react-dapp && npm run test:e2e:dev",
    "test:e2e:ui:demo": "cd ./examples/react-demo && npm run test:e2e:dev",
    "prepare": "husky",
    "lint-staged": "turbo lint-staged"
  },
  "devDependencies": {
    "@nfid/eslint-config": "*",
    "@nfid/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "dotenv-cli": "latest",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.11",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "config/*",
    "docs",
    "examples/*",
    "packages/*"
  ]
}